<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/select_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        
        <Button 
            android:id="@+id/select_button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_practice_button_confirm"/>
        
        <Button 
            android:id="@+id/select_button_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_practice_button_cancle"/>
    </LinearLayout>
    
    
    <ListView 
        android:id="@+id/set_practice_select_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/select_buttons"
        >
        
    </ListView>
    
    

</RelativeLayout>
