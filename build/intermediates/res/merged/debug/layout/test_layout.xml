<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:paddingTop="20dp">

    <!--<TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="80sp"/>-->
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="130dp">
		<include
			layout="@layout/cell_card_front"
			android:layout_height="130dp"
			android:layout_width="90dp"
			android:layout_gravity="center"/>
		<include
			layout="@layout/cell_card_back"
			android:layout_height="130dp"
			android:layout_width="90dp"
			android:layout_gravity="center"/>
	</FrameLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:id="@+id/row_1_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>
        
        <Button 
      	  android:id="@+id/select_1"
   	      android:layout_width="130dp"
  	      android:layout_height="wrap_content"
    	  android:gravity="center"
   	      android:layout_toLeftOf="@id/row_1_center"
  	      android:layout_marginRight="10dp"/>
        
        <Button 
      	  android:id="@+id/select_2"
   	      android:layout_width="130dp"
  	      android:layout_height="wrap_content"
    	  android:gravity="center"
   	      android:layout_toRightOf="@id/row_1_center"
  	      android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        
        <TextView 
            android:id="@+id/row_2_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>
        
        <Button 
      	  android:id="@+id/select_3"
   	      android:layout_width="130dp"
  	      android:layout_height="wrap_content"
    	  android:gravity="center"
   	      android:layout_toLeftOf="@id/row_2_center"
  	      android:layout_marginRight="10dp"/>
        
        <Button 
      	  android:id="@+id/select_4"
   	      android:layout_width="130dp"
  	      android:layout_height="wrap_content"
    	  android:gravity="center"
   	      android:layout_toRightOf="@id/row_2_center"
  	      android:layout_marginLeft="10dp"/>
    </RelativeLayout>
	
</LinearLayout>
